# Cognitive Workspace Database Configuration
# Copy this file to .env and fill in your values

# Neo4j Configuration (REQUIRED)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Chroma Vector Database
CHROMA_PATH=./chroma_data

# Embedding Model (sentence-transformers)
# Basic: all-MiniLM-L6-v2 (384-dim, 80MB, fast, good for CPU)
# Default: Qwen/Qwen3-Embedding-0.6B (1536-dim, 1.5GB, better quality, GPU recommended)
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B

# LLM Configuration (Ollama) Pick your own model if desired
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=qwen3:4b

# Cognitive Operations
CONFIDENCE_THRESHOLD=0.5
